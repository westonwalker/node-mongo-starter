<%
if (locals.flashes) {
%>
<div class="">
  <% const categories = Object.keys(locals.flashes) %>

  <% categories.forEach(function(category) { %>
  <% flashes[category].forEach(function(message) { 
    let bgColor = 'bg-gray-200';
    let borderColor = 'border-gray-500';
    let textColor = 'text-gray-700';
    if (category === 'error') {
      bgColor = 'bg-red-100';
      borderColor = 'border-red-400';
      textColor = 'text-red-700';
    }
    if (category === 'warning') {
      bgColor = 'bg-orange-100';
      borderColor = 'border-orange-500';
      textColor = 'text-orange-700';
    }
    if (category === 'success') {
      bgColor = 'bg-green-100';
      borderColor = 'border-green-400';
      textColor = 'text-green-700';
    }
    if (category === 'info') {
      bgColor = 'bg-blue-100';
      borderColor = 'border-blue-500';
      textColor = 'text-blue-700';
    }
  %>
  <div class="<%= bgColor %> border <%= borderColor %> <%= textColor %> px-4 py-3 rounded relative my-2" role="alert">
    <span class="block sm:inline"><%= message %></span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onClick="this.parentElement.remove()">
      <svg class="fill-current h-6 w-6 <%= borderColor %>" role="button" xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20">
        <title>Close</title>
        <path
          d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
      </svg>
    </span>
  </div>
  <% }); %>
  <% }); %>
</div>

<%
}
%>
